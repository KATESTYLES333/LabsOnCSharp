<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:lab23">

	<Style x:Key="PannelStyle" TargetType="DockPanel">
		<Setter Property="Background" Value="LightGray" />
	</Style>

	<Style x:Key="GridStyle" TargetType="Grid">
		<Setter Property="Background" Value="Gray" />
	</Style>

	<Style x:Key="TxtBoxStyle" TargetType="TextBox">
		<Setter Property="Background" Value="LightSlateGray" />
	</Style>

	<Style x:Key="CanvasStyle" TargetType="Canvas">
		<Setter Property="Background" Value="LightGray" />
	</Style>

	<Style x:Key="TextBlockStyle" TargetType="Label">
		<Setter Property="Background" Value="LightSlateGray" />
		<Setter Property="Foreground" Value="GreenYellow" />
	</Style>

	<Style x:Key="WindowStyle" TargetType="Window">
		<Setter Property="Background" Value="White" />
	</Style>

	<Style x:Key="CheckStyle" TargetType="CheckBox">
		<Setter Property="Foreground" Value="Blue" />
	</Style>

	<Style x:Key="ButtonStyle" TargetType="Button">
		<Setter Property="Background" Value="Gray" />
		<Setter Property="Foreground" Value="Blue" />
		<Setter Property="BorderBrush" Value="White" />

		<Style.Triggers>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="FontSize" Value="14" />
				<Setter Property="Foreground" Value="Gray" />
			</Trigger>
		</Style.Triggers>
	</Style>

</ResourceDictionary>
