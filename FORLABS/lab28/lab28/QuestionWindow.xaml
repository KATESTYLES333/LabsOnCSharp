<Window x:Class="lab28.QuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab28"
        mc:Ignorable="d"
        Title="QuestionWindow" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"  />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Label FontSize="12" Content="{Binding QuestionText}" Margin="5" Grid.Row="0"/>
		<Image Source="{Binding ImgPath}" Margin="5" Grid.Row="1"/>
		<Button Grid.Row="2" Click="Button_Click" Content="{Binding FirstAnswer}" FontSize="20" Margin="2"/>
		<Button Grid.Row="3" Click="Button_Click_1" Content="{Binding SecondAnswer}" FontSize="20" Margin="2"/>
		<Button Grid.Row="4" Click="Button_Click_2" Content="{Binding ThirdAnswer}" FontSize="20" Margin="2"/>
		<Button Grid.Row="5" Click="Button_Click_3" Content="{Binding FourthAnswer}" FontSize="20" Margin="2"/>

	</Grid>
</Window>
